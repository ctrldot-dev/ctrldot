{
  "name": "web-dot",
  "version": "0.1.0",
  "description": "Product Ledger Demo UI - Web Dot",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:build\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:build": "tsc --watch --project tsconfig.json",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/server/index.js",
    "server": "tsx server/index.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
